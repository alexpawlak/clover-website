        </div>
        
        <!-- Decorative elements -->
        <div class="absolute top-1/4 -right-8 w-64 h-64 bg-brand-pink-light rounded-full opacity-20 blur-3xl"></div>
        <div class="absolute bottom-1/4 -left-8 w-64 h-64 bg-accent-violet rounded-full opacity-20 blur-3xl"></div>
      </div>
    </div>
  </div>
</section>
