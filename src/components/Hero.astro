---
// Hero component for homepage
---

<section class="relative overflow-hidden bg-gradient-to-br from-brand-pink-light/30 via-white to-accent-violet/10">
  <div class="container-custom py-20 md:py-28">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 leading-tight">
          Find Baby Changing Places
          <span class="text-brand-pink">Near You</span>
        </h1>
        <p class="mt-6 text-lg md:text-xl text-neutral-700 leading-relaxed">
          Discover family-friendly facilities including changing tables, nursing rooms, high chairs, and family restrooms. Powered by parents, for parents.
        </p>
        
        <!-- CTA Buttons -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href="https://apps.apple.com/us/app/clover-baby-changing-places/id6755951622"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary text-lg px-8 py-4"
          >
            Download App
          </a>
          <a href="#features" class="btn-outline text-lg px-8 py-4">
            Learn More
          </a>
        </div>

        <!-- Stats -->
        <div class="mt-12 grid grid-cols-3 gap-6">
          <div>
            <div class="text-3xl font-bold text-brand-pink">1000+</div>
            <div class="text-sm text-neutral-600 mt-1">Places Mapped</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-accent-violet">50+</div>
            <div class="text-sm text-neutral-600 mt-1">Cities</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-amenity-green-dark">24/7</div>
            <div class="text-sm text-neutral-600 mt-1">Available</div>
          </div>
        </div>
      </div>

      <!-- Hero Image / App Screenshots -->
      <div class="relative lg:block">
        <div class="relative z-10 mx-auto max-w-md">
          <div class="relative">
            <div class="absolute -left-6 -top-8 w-40 sm:w-44 md:w-48 rotate-[-6deg] hidden sm:block">
              <img
                src="/images/hero/Simulator%20Screenshot%20-%20iPhone%2017%20Pro%20Max%20-%202026-02-10%20at%2017.15.57.jpg"
                alt="Baby Change Map explore screen"
                loading="lazy"
                class="w-full h-auto rounded-[2rem] shadow-xl border border-white/70"
              />
            </div>
            <div class="absolute -right-6 top-16 w-40 sm:w-44 md:w-48 rotate-[6deg] hidden sm:block">
              <img
                src="/images/hero/Simulator%20Screenshot%20-%20iPhone%2017%20Pro%20Max%20-%202026-02-10%20at%2017.17.33.jpg"
                alt="Baby Change Map details screen"
                loading="lazy"
                class="w-full h-auto rounded-[2rem] shadow-xl border border-white/70"
              />
            </div>
            <div class="relative mx-auto w-[16rem] sm:w-[18rem] md:w-[20rem] lg:w-[22rem]">
              <img
                src="/images/hero/Simulator%20Screenshot%20-%20iPhone%2017%20Pro%20Max%20-%202026-02-10%20at%2021.00.02.jpg"
                alt="Baby Change Map app home screen"
                loading="eager"
                class="w-full h-auto rounded-[2.5rem] shadow-2xl border border-white/70"
              />
            </div>
          </div>
        </div>
        
        <!-- Decorative elements -->
        <div class="absolute top-1/4 -right-8 w-64 h-64 bg-brand-pink-light rounded-full opacity-20 blur-3xl"></div>
        <div class="absolute bottom-1/4 -left-8 w-64 h-64 bg-accent-violet rounded-full opacity-20 blur-3xl"></div>
      </div>
    </div>
  </div>
</section>
