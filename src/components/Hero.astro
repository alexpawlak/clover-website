---
// Hero component for homepage
---

<section class="relative overflow-hidden bg-gradient-to-br from-brand-pink-light/30 via-white to-accent-violet/10">
  <div class="container-custom py-20 md:py-28">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 leading-tight">
          Find Baby Changing Places
          <span class="text-brand-pink">Near You</span>
        </h1>
        <p class="mt-6 text-lg md:text-xl text-neutral-700 leading-relaxed">
          Discover family-friendly facilities including changing tables, nursing rooms, high chairs, and family restrooms. Powered by parents, for parents.
        </p>
        
        <!-- CTA Buttons -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="#download" class="btn-primary text-lg px-8 py-4">
            Download App
          </a>
          <a href="#features" class="btn-outline text-lg px-8 py-4">
            Learn More
          </a>
        </div>

        <!-- Stats -->
        <div class="mt-12 grid grid-cols-3 gap-6">
          <div>
            <div class="text-3xl font-bold text-brand-pink">1000+</div>
            <div class="text-sm text-neutral-600 mt-1">Places Mapped</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-accent-violet">50+</div>
            <div class="text-sm text-neutral-600 mt-1">Cities</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-amenity-green-dark">24/7</div>
            <div class="text-sm text-neutral-600 mt-1">Available</div>
          </div>
        </div>
      </div>

      <!-- Hero Image / Phone Mockup Placeholder -->
      <div class="relative lg:block">
        <div class="relative z-10 mx-auto max-w-md">
          <!-- Placeholder for phone mockup - will be replaced with actual screenshot -->
          <div class="aspect-[9/19] bg-gradient-to-br from-brand-pink to-accent-violet rounded-[3rem] shadow-2xl p-2">
            <div class="w-full h-full bg-white rounded-[2.5rem] flex items-center justify-center">
              <div class="text-center p-8">
                <svg class="w-24 h-24 mx-auto text-brand-pink" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
