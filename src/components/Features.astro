---
// Features section showcasing key app capabilities
const features = [
  {
    title: 'Real-Time Map',
    description: 'View baby-friendly facilities on an interactive map. Filter by changing tables, nursing rooms, high chairs, and more.',
    icon: 'map',
    color: 'brand-pink',
  },
  {
    title: 'Offline Access',
    description: 'Access saved locations even without internet connection. Perfect for traveling or areas with poor coverage.',
    icon: 'offline',
    color: 'accent-violet',
  },
  {
    title: 'Community Driven',
    description: 'Contribute by adding new places and photos. Help other parents discover family-friendly facilities.',
    icon: 'community',
    color: 'amenity-green-dark',
  },
  {
    title: 'Detailed Information',
    description: 'See opening hours, accessibility info, and real photos from other parents before you visit.',
    icon: 'info',
    color: 'amenity-blue-dark',
  },
  {
    title: 'Search & Filter',
    description: 'Find exactly what you need with powerful search and filter options for all amenity types.',
    icon: 'search',
    color: 'amenity-orange-dark',
  },
  {
    title: 'Always Updated',
    description: 'Benefit from real-time updates from our community and trusted data sources like GBPTM.',
    icon: 'update',
    color: 'brand-pink-dark',
  },
];

const iconPaths = {
  map: 'M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7',
  offline: 'M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4',
  community: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  info: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  search: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  update: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
};
---

<section id="features" class="py-20 bg-white">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
        Everything You Need as a Parent
      </h2>
      <p class="text-lg text-neutral-600">
        Clover helps you navigate parenthood with confidence. Find facilities, contribute to the community, and never worry about changing places again.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="card p-6 hover:scale-105 transition-transform duration-200">
          <div class={`w-12 h-12 rounded-xl bg-${feature.color}/10 flex items-center justify-center mb-4`}>
            <svg class={`w-6 h-6 text-${feature.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[feature.icon]} />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-2">
            {feature.title}
          </h3>
          <p class="text-neutral-600">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
